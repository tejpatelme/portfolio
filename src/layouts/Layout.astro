---
import "../styles/global.css";

const { title } = Astro.props;

const meta = {
  title: "Tej Patel - Software Engineer from Mumbai",
  description:
    "Tej Patel is a skilled Software Engineer from Mumbai, focused on building high-performance user interfaces using React and modern frontend stacks",
  author: "Tej Patel",
};

// Change this if changing the bg color
const bgColor = "oklch(20.8% 0.042 265.755)";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
    />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <title>Tej Patel - Software Engineer from Mumbai | {title}</title>
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={meta.description} />
    <meta name="author" content={meta.author} />

    <!-- Notification/Status Bar color for dark theme -->
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content={bgColor} />
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content={bgColor} />
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  </head>
  <body class="bg-slate-900">
    <slot />
  </body>
</html>
